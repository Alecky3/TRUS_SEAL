@page
@model TrustSeal.Pages.TsQuestions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid table-container">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="h4 mb-4">Questions</h2>
            <div class="mb-3">
                <a asp-page="Create" class="btn btn-primary btn-custom">Create New</a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm small shadow">
                    <thead class="table-light bg-secondary text-black">
                        <tr>
                            <th>
                               Text
                            </th>
                            <th >
                               Status
                            </th>
                            <th class="text-nowrap">
                                Requires Attachment
                            </t >
                            <th>
                               Criteria
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Question)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QuestionText)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HasAttachment)
                                </td>
                                <td class="text-nowrap">
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a>
                                        <a class="btn btn-info btn-sm" asp-page="./Details" asp-route-id="@item.Id"><i class="text-white bi bi-eye-fill"></i></a>
                                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
